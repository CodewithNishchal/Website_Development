<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Manage Student Notices</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center">ðŸ“¢ Manage Student Notices</h2>

        <!-- ðŸ”¹ Display Notices -->
        <div class="row">
            <% if (notices.length > 0) { %>
                <% notices.forEach(notice => { %>
                    <div class="col-md-6">
                        <div class="card my-3">
                            <div class="card-body">
                                <h5 class="card-title">ðŸ“° <%= notice.title %></h5>
                                <p class="card-text">
                                    <strong>Date:</strong> <%= notice.date.toDateString() %>
                                </p>
                                <p class="card-text">
                                    <a href="<%= notice.link %>" target="_blank">View Notice</a>
                                </p>
                                <form action="/admin/studentnotice/<%= notice._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">ðŸ—‘ Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center text-muted">No notices found.</p>
            <% } %>
        </div>

        <!-- ðŸ”¹ Add New Notice -->
        <h3 class="mt-5">âž• Add New Notice</h3>
        <form action="/admin/studentnotice" method="POST">
            <div class="mb-3">
                <label class="form-label">Notice Title:</label>
                <input type="text" name="title" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Date:</label>
                <input type="date" name="date" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Notice Link:</label>
                <input type="url" name="link" class="form-control" required>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" name="isNew" class="form-check-input" checked>
                <label class="form-check-label">Mark as New</label>
            </div>
            <button type="submit" class="btn btn-success">ðŸ“¢ Add Notice</button>
        </form>

    </div>

</body>
</html>
