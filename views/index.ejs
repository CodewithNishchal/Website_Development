  <body style="background-color: rgba(6, 19, 95, 0.922);">

    <div id="facultynotices-data" data-facultynotices='<%- JSON.stringify(facultynotices) %>' hidden></div>
    <div id="events-data" data-events='<%- JSON.stringify(events) %>' hidden></div>
    <div id="awards-data" data-awards='<%- JSON.stringify(awards) %>'></div>
    <div id="studentnotices-data" data-studentnotices='<%- JSON.stringify(studentnotices) %>' hidden></div>



    <div class="top_head">
      <div class="text">
      Welcome to IIIT Nagpur. 
    </div>  
    <div class="social-icons">
            <a href="https://x.com/IIITN_OFFICIAL" target="_blank"><i class="fab fa-x-twitter"></i></a>
            <a href="https://www.linkedin.com/in/iiitnofficial/" target="_blank"><i class="fab fa-linkedin-in"></i></a>
            <a href="https://www.instagram.com/iiitnagpur/" target="_blank"><i class="fab fa-instagram"></i></a>
            <a href="https://www.youtube.com/channel/UCdABXietns2bXshI0nstH2A" target="_blank"><i class="fab fa-youtube"></i></a>
    </div>
            <button>
       Donate
      </button>
    </div>
    <div id="backImage">
    <%- include('./partials/header.ejs') %>
      <div
        id="carouselExampleAutoplaying"
        class="carousel slide carousel-fade"
        data-bs-ride="carousel"
      >
      <div class="carousel-inner">
        <% carouselimages.forEach((image, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <img src="<%= image.imageUrl %>" class="d-block w-100" alt="<%= image.altText || 'Carousel Image' %>" />
            </div>
        <% }) %>
    </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleAutoplaying"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleAutoplaying"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>



    <div class="container_class">
        <!-- Upcoming Events Section -->
        <section class="events-section" style="border-radius: 20px;background-color:whitesmoke;">
            <h2 class="section-title" style="text-align: center;">Upcoming Events</h2>
            <div class="event-container" style="border-top:1px solid black;">
              
                <div class="event-slider" style="width:650px;height: max-content;padding: 20px;">
                    <!-- Example Event Card -->
                    <div class="event-card">
                        <img src="/api/placeholder/300/200]" alt="Event">
                        <h3>Sample Event</h3>
                        <p class="event-date">February 24, 2025</p>
                        <p class="course-id">Course ID: CS101</p>
                        <p>Event description goes here...</p>
                    </div>
                    <!-- Add more event cards as needed -->
                </div>
                <div class="nav-btn-container" style="display: flex; justify-content:space-between;">
                  <button class="nav-btn prev">❮</button>
                  <button class="nav-btn next">❯</button>
                </div
             
            </div>
        </section>

        <!-- Director's Message Section -->
        <section>
            <div class="d-container" style=" border: 1px solid black;width: 800px; background-color:whitesmoke;border-radius: 20px;padding: 20px;">
                <div class="d-content">
                    <div class="d-text-content">
                        <h1 style="width: max-content;text-align: center;">Message from Director</h1>
                        <div class="d-m">
                        <p class="d-message" >
                            It is a privilege for me to have assumed the position of Director, NIT Rourkela, on 18th February 2022. NIT Rourkela has a rich legacy of sixty dedicated years of service to the nation and is the pride of Odisha. Excellence in teaching and high-quality research are the pillars on which the Institute is built. The Institute aims to foster 21st-century skills and competencies supported by defined learning frameworks and industrial internships for the students as part of Industry 4.0. With these skillsets, our students are future-ready to make an impact at work in general and society in particular.
                        </p>
                      </div>
                        <p class="director-name" style="width: max-content; ";">Prof. K. Umamaheshwar Rao </p>
                        <a href="#" class="learn-more">Learn More</a>
                    </div>
                    <div class="d-image-container">
                        <img src="/images/director.jpg" alt="Director" class="director-image">
                    </div>
                </div>
            </div>
        </section>
    </div>
      </section>
    </div>





    <div class="research">
        <h2>Research & Innovation</h2>
        <hr>
        <div class="researchSlider">
            <i class="fa-solid fa-angle-left" id="left"></i>
            <ul class="research_list">
                <% researchItems.forEach(item => { %>
                    <li class="research_item" onclick="window.location.href='/research?card=<%= item._id %>'">
                        <div class="card-content">
                            <img src="<%= item.imageUrl %>" alt="<%= item.title %>" draggable="false">
                            <h3><%= item.title %></h3>
                            <div class="hover-content">
                                <p><%= item.description %></p>
                            </div>
                        </div>
                    </li>
                <% }) %>
            </ul>
            <i class="fa-solid fa-angle-right" id="right"></i>
        </div>
        
    </div>



    <section class="combined-section">
      <!-- Column 1: Latest IIIT Nagpur Headlines -->
      <div class="headlines-container">
        <h2 class="headlines-title">Latest Updates</h2>
        <div class="headlines-list">
          <% headlines.forEach(headline => { %>
              <a href="<%= headline.link %>" class="headline-item" data-image="<%= headline.imageUrl %>">
                  <%= headline.text %>
              </a>
          <% }) %>
      </div>
      
      </div>
    
      <!-- Column 2: Image -->
      <div class="image-container">
        <div class="border-container">
          <div class="inner-border">
            <img id="display-image" src="/images/oo.png" alt="Hover Image">
          </div>
        </div>
        <div class="loading-line-image"></div>
      </div>    
      
      <!-- Column 3: Stats Section -->
      <div class="stats-container">
        <div class="stats-grid">
          <div class="stat-item">
            <div class="stat-number" data-target="95">0%</div>
            <div class="stat-text">placed in 2023</div>
          </div>
          <div class="stat-item">
            <div class="stat-number" data-target="97">0%</div>
            <div class="stat-text">internships in 2023</div>
          </div>
          <div class="stat-item">
            <div class="stat-number" data-target="75">0</div>
            <div class="stat-text">research papers in 2023</div>
          </div>
          <div class="stat-item">
            <div class="stat-number" data-target="90">0%</div>
            <div class="stat-text">faculty with PhDs</div>
          </div>
        </div>
      </div>
    </section>
    
    
    
    
  <div class="Notice-Box">
    <div class="notice-container">
