      <% clubs.forEach((club, index) => { %>
        <div class="flip-card">
          <div class="flip-card-inner">
            <div class="flip-card-front <%= index % 2 === 0 ? 'bg-orange' : 'bg-dark-blue' %>">
              <img src="/images/<%= club.logo %>" alt="<%= club.name %>" onerror="this.src='/css/images/placeholder.png';">
              <h3><%= club.name %></h3>
            </div>
            <div class="flip-card-back <%= index % 2 === 0 ? 'bg-dark-blue' : 'bg-orange' %>">
