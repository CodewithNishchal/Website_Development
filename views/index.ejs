  <body>
    <div id="backImage">
    <%- include('./partials/header.ejs') %>
      <div
        id="carouselExampleAutoplaying"
        class="carousel slide carousel-fade"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/photo.jpg" class="d-block w-100" alt="..." />
          </div>
          <div class="carousel-item">
            <img src="/images/front.jpg" class="d-block w-100" alt="..." />
          </div>
          <div class="carousel-item">
            <img src="/images/image2.jpg" class="d-block w-100" alt="..." />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleAutoplaying"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleAutoplaying"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>



    <div class="container">
      <section class="section events-section">
        <h2 class="section-title">Upcoming Events</h2>
        <div class="event-container">
          <button class="nav-btn prev">❮</button>
          <div class="event-slider">
            <!-- Events will be inserted here by JavaScript -->
          </div>
          <button class="nav-btn next">❯</button>
        </div>
      </section>

      <!-- Awards Section -->
      <section class="section awards-section">
        <h2 class="section-title">Awards and Recognition</h2>
        <div class="awards-container">
          <div class="awards-scroll">
            <!-- Awards will be inserted here by JavaScript -->
          </div>
        </div>
      </section>

      <!-- Seminars Section -->
      <section class="section seminars-section">
        <h2 class="section-title">Seminars</h2>
        <div class="seminar-container">
          <div class="seminar-card">
            <div class="speaker-image">
              <img src="/api/placeholder/150/150" alt="Mr. Ramesh Banoth" />
            </div>
            <div class="seminar-tag">Ph.D. Pre-Synopsis Open Seminar</div>
            <h3 class="speaker-name">Mr. Ramesh Banoth</h3>
            <p class="seminar-title">
              Studies on Interface Engineering and Charge Carrier Dynamics of
              Perovskite Solar Cells using MoS2 Nanosheets and Conjugated
              Polymer Blends
            </p>
            <div class="seminar-details">
              <p><strong>Supervisor:</strong> Prof. Kusumi Kumari</p>
              <p><strong>Venue:</strong> Room No. PH 425</p>
              <p><strong>Physics</strong></p>
              <p class="seminar-time">26-February-2025 | 12:00 PM</p>
            </div>
          </div>
        </div>
      </section>
    </div>

    <div class="research">
      <h2>Research & Innovation</h2>
      <hr>
      <div class="researchSlider">
          <i class="fa-solid fa-angle-left" id="left"></i>
          <ul class="research_list">
              <!-- Card 1 -->
              <li class="research_item">
                  <div class="card-content">
                      <img src="/images/a.jpg" alt="Artificial Intelligence" draggable="false">
                      <h3>Artificial Intelligence & Machine Learning</h3>
                      <div class="hover-content">
                          <p>Advancing deep learning, NLP, and AI-driven automation for real-world applications.</p>
                      </div>
                  </div>
              </li>
              <!-- Card 2 -->
              <li class="research_item">
                  <div class="card-content">
                      <img src="/images/b.jpg" alt="Quantum Computing" draggable="false">
                      <h3>Quantum Computing & Cryptography</h3>
                      <div class="hover-content">
                          <p>Exploring quantum algorithms and secure encryption methods for next-gen computing.</p>
                      </div>
                  </div>
              </li>
              <!-- Card 3 -->
              <li class="research_item">
                  <div class="card-content">
                      <img src="/images/c.jpg" alt="IoT & Smart Systems" draggable="false">
                      <h3>IoT & Smart Systems</h3>
                      <div class="hover-content">
                          <p>Developing intelligent, interconnected devices for smart cities, healthcare, and automation.</p>
                      </div>
                  </div>
              </li>
              <!-- Card 4 -->
              <li class="research_item">
                  <div class="card-content">
                      <img src="/images/d.jpg" alt="Cybersecurity" draggable="false">
                      <h3>Cybersecurity & Ethical Hacking</h3>
                      <div class="hover-content">
                          <p>Strengthening digital security through penetration testing, threat analysis, and cryptography.</p>
                      </div>
                  </div>
              </li>
              <!-- Card 5 -->
              <li class="research_item">
                  <div class="card-content">
                      <img src="/images/e.jpg" alt="HCI" draggable="false">
                      <h3>Human-Computer Interaction (HCI)</h3>
                      <div class="hover-content">
                          <p>Enhancing user experience with intuitive interfaces, AR/VR, and assistive technologies.</p>
                      </div>
                  </div>
              </li>
              <!-- Card 6 -->
              <li class="research_item">
                  <div class="card-content">
                      <img src="/images/f.jpg" alt="Autonomous Systems" draggable="false">
                      <h3>Autonomous Systems & Robotics</h3>
                      <div class="hover-content">
                          <p>Designing AI-powered robots for automation, navigation, and real-world problem-solving.</p>
                      </div>
                  </div>
              </li>
          </ul>
          <i class="fa-solid fa-angle-right" id="right"></i>
      </div>
  </div>


