    <div class="container_class">
        <!-- Upcoming Events Section -->
        <section class="events-section" style="border-radius: 20px; background-color: white; padding: 20px; width: 700px; margin: 0 auto;">
            <h2 class="section-title" style="text-align: center;">Upcoming Events</h2>
            <div class="event-container" style="border-top:1px solid black;">
              
                <div class="event-slider" style="width:35vw;height: max-content;padding: 20px;">
